#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define Ss struct Student
#define Sc struct Course

struct Course
{
    float Grade_pingshi,Grade_shiyan,Grade_kaoshi,Grade_zongping;
};

char COURSE[6][7]={"语文","数学","英语","物理","化学","生物"};

struct Student
{
    char Number[20],Name[20],Class[20];
    struct Course *yuwen,*shuxue,*yingyu,*wuli,*huaxue,*shengwu;
    struct Student *next;
};

Ss *head=NULL,*p1,*p2;
int n=0,h=0;

void DO_1()//输入信息 完成
{
    Ss *t;
    Sc *u;

    t=(struct Student *)malloc(sizeof(struct Student));
    t->next=NULL;
    printf("请输入该生的学号：");
    scanf("%s",t->Number);
    printf("请输入该生的姓名：");
    scanf("%s",t->Name);
    printf("请输入该生的班别：");
    scanf("%s",t->Class);
    u=t->yuwen;u=(struct Course *)malloc(sizeof(struct Course));
   // u=t;
    for(int i=0;i<6;i++)
    {
        printf("请输入该生%s的平时成绩：",COURSE[i]);
        scanf("%f",&u->Grade_pingshi);
        printf("请输入该生%s的实验成绩：",COURSE[i]);
        scanf("%f",&u->Grade_shiyan);
        printf("请输入该生%s的考试成绩：",COURSE[i]);
        scanf("%f",&u->Grade_kaoshi);
        u++;
//        printf("请输入该生%s的平时成绩：");
//        scanf("%f",&t->Grade_pingshi);
//        printf("请输入该生%s的实验成绩：");
//        scanf("%f",&t->Grade_shiyan);
//        printf("请输入该生%s的考试成绩：");
//        scanf("%f",&t->Grade_kaoshi);
//        t->Grade_zongping
    }
    printf("输入完成！\n\n\n\n");
   // t->next=NULL;
    p1->next=t;
    p1=t;
    n++;
}
